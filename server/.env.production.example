# Production Environment Configuration
# Copy this file to .env.production and update with your production values

# Server Configuration
NODE_ENV=production
HTTP_PORT=3001
HTTPS_PORT=3443
DOMAIN=your-domain.com

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ibridge-ai-prod?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CLIENT_URL=https://your-client-domain.com

# SSL/TLS Configuration
SSL_CERT_PATH=/path/to/certificates
SSL_KEY_FILE=private.key
SSL_CERT_FILE=certificate.crt
SSL_CA_FILE=ca_bundle.crt
ENFORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# Security Configuration
ALLOW_SELF_SIGNED=false

# AWS S3 Configuration (if using file uploads)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET_NAME=your-bucket-name

# Rate Limiting Configuration
AUTH_RATE_LIMIT=10
API_RATE_LIMIT=500
STRICT_RATE_LIMIT=1000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/var/log/ibridge-ai/app.log

# Email Configuration (if using email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Application Configuration
APP_NAME=iBridge AI
APP_VERSION=1.0.0
MAINTENANCE_MODE=false

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30000
PERFORMANCE_MONITORING=true

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Semantic Matching Service
SEMANTIC_MATCHING_API_URL=https://semantic-matching-service-xxxx.onrender.com
FALLBACK_TO_LEGACY=true

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_TIMEOUT=24h

# File Upload Configuration
MAX_FILE_SIZE=10mb
UPLOAD_DIR=/uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,csv,xlsx

# API Documentation
API_DOCS_ENABLED=false
API_DOCS_PATH=/api/docs

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30
